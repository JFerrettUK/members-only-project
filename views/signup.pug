extends layout

block content
    .jumbotron.jumbotron-fluid.bg-light.py-5
      .container
        h1.text-center= title

        form.col-md-6.mx-auto(action="/signup", method="post")
          div.form-group.mb-3
            label.form-label(for="firstName") First Name:
            input#firstName.form-control(type="text", name="firstName", required)

          div.form-group.mb-3
            label.form-label(for="lastName") Last Name:
            input#lastName.form-control(type="text", name="lastName", required)

          div.form-group.mb-3
            label.form-label(for="email") Email:
            input#email.form-control(type="email", name="email", required)

          div.form-group.mb-3
            label.form-label(for="password") Password:
            input#password.form-control(type="password", name="password", required)

          button.btn.btn-primary(type="submit") Sign Up
